<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="#5c134bb3"
    android:paddingTop="0dp"
    >
    <!--android:background="#B3FF2FFF">-->
    <!--android:background="@drawable/appwidget_dark_bg_pressed"-->
    <!--android:background="@drawable/appwidget_dark_bg"-->
    <!--android:background="@android:color/transparent">-->

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:paddingTop="32dp"
        android:paddingBottom="12dp"
        android:background="#98134bb3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/headerTable"
            android:layout_below="@+id/contentContainer"
            android:layout_alignParentStart="true"
            android:background="#98133eb3">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="#e84e85eb"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="sss"
                android:textColor="#fcfcfc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#e8134bb3" />

            </TableRow>

        </TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/timeTable"
                android:layout_below="@+id/contentContainer"
                android:layout_alignParentStart="true"
                android:background="#98134bb3">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:background="#e84e85eb"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:34"
                        android:layout_column="0"
                        android:textColor="@color/widgetTextColor"
                        android:id="@+id/firstTimeTextView"
                        android:layout_gravity="center"
                        android:textSize="35dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstImageView"
                        android:layout_column="1"
                        android:src="@drawable/ic_action_photo"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 MIN"
                        android:textColor="@color/widgetTextColor"
                        android:id="@+id/textView2"
                        android:layout_gravity="center"
                        android:layout_column="2"
                        android:textSize="30dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView"
                        android:src="@drawable/ic_action_photo"
                        android:layout_column="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30"
                        android:textColor="@color/widgetTextColor"
                        android:id="@+id/textView3"
                        android:layout_gravity="center"
                        android:layout_column="4"
                        android:textSize="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView2"
                        android:src="@drawable/ic_action_photo"
                        android:layout_column="5" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:background="#e84e85eb"
                    android:gravity="center"
                    android:orientation="horizontal">

                </TableRow>
            </TableLayout>

        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageTable"
            android:background="#98134bb3"
            android:layout_below="@+id/contentContainer"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="#e84e85eb"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="first Message"
                    android:layout_row="1"
                    android:layout_weight="2"
                    android:textColor="@color/widgetTextColor"
                    android:id="@+id/firstMessageTextView"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second Message"
                    android:layout_weight="2"
                    android:id="@+id/textView4"
                    android:textColor="@color/widgetTextColor"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Third Message"
                    android:id="@+id/textView5"
                    android:layout_weight="2"
                    android:textColor="@color/widgetTextColor"
                    android:layout_column="6" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/contentContainer"
        android:layout_alignParentStart="true" />
</RelativeLayout>