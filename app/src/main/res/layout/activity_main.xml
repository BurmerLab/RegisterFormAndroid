<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/userNameRegisteredEditText"
        android:text="mike"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lengthWorkTimeRegisteredSpinner"
        android:backgroundTint="@color/application_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email address"
        android:id="@+id/emailRegisteredEditText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/userNameRegisteredEditText"
        android:text="mike@dude.com"
        android:backgroundTint="@color/application_color"
        android:layout_below="@+id/userNameRegisteredEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/passwordRegisteredEditText"
        android:layout_below="@+id/emailRegisteredEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/emailRegisteredEditText"
        android:text="2312321"
        android:autoLink="none"
        android:backgroundTint="@color/application_color" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flexible_type_work"
        android:id="@+id/flexibleTypeWorkRegisteredCheckbox"
        android:checked="false"
        android:buttonTint="@color/application_color"
        android:layout_below="@+id/passwordRegisteredEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/standard_type_work"
        android:id="@+id/standardTypeWorkRegisteredCheckbox"
        android:layout_alignTop="@+id/flexibleTypeWorkRegisteredCheckbox"
        android:layout_centerHorizontal="true"
        android:buttonTint="@color/application_color"/>

    <Spinner
        android:id="@+id/lengthWorkTimeRegisteredSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/length_work_hours_list"
        android:prompt="@string/length_work_hours_text"
        android:layout_marginTop="21dp"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:layout_below="@+id/length_work_hours_register_text"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/registeredButton"
        android:background="@color/application_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/password_register_text"
        android:id="@+id/password_register_text"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/emailRegisteredEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/work_type_register_text"
        android:id="@+id/work_type_register_text"
        android:layout_above="@+id/standardTypeWorkRegisteredCheckbox"
        android:layout_alignEnd="@+id/password_register_text"
        android:layout_marginBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/length_work_hours_register_text"
        android:id="@+id/length_work_hours_register_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
